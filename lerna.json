{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "npmClient": "npm"
    },
    "version": {
      "allowBranch": ["master", "feat/*", "bug/*", "v3.x"],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  },
  "ignoreChanges": ["**/*.md", ".github/**", "**/tests/**", "automation/**"]
}
